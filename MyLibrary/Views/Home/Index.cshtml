@{
    ViewBag.Title = "Home Page";
}
<div class="row top-buffer">
    <div class="col-md-5 col-md-offset-3">
        <h4 align="center">Поиск книг по библиотеке</h4>
    </div>
</div>
<div class="row">
    @using (Ajax.BeginForm("Index", "Search", FormMethod.Post,
        new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            LoadingElementId = "loading", 
            UpdateTargetId = "search-results"
         }))
    {
        <div class="col-md-5 col-md-offset-3">
                <div class="form-group">
                    <input type="text" class="form-control" name="searchQuery" placeholder="Введите запрос...">
                </div>    
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> Найти</button>
        </div>
    }
    <div class="row top-buffer">
    </div>
<div class="row">
    <div id="loading" class="col-md-5 col-md-offset-4" style="display: none;">
        <img src="/Content/img/gears.gif">
</div>
</div>
</div>
<div id="search-results">
</div>